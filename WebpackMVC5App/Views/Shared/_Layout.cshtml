<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - My ASP.NET Application</title>
  <script>
    window.RandomWebConfigValue = '@WebpackMVC5App.Helpers.WebConfigSettings.RandomWebConfigValue';
  </script>
  @if (System.Web.HttpContext.Current.IsDebuggingEnabled)
  {
    <link href="@Url.Tag("~/build/webpack/app.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Tag("~/build/webpack/app.js")"></script>
  }
  else
  {
    <link href="@Url.Tag("~/build/webpack/app.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Tag("~/build/webpack/app.min.js")"></script>
  }
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav"></ul>
      </div>
    </div>
  </div>

  <div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
      <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
  </div>
</body>
</html>